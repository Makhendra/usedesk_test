                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Client": {
                "title": "Client",
                "description": "Client model",
                "required": [
                    "name",
                    "last_name"
                ],
                "properties": {
                    "id": {
                        "title": "ID",
                        "description": "ID",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "description": "Class Client",
                        "example": "Ivan"
                    },
                    "last_name": {
                        "description": "Class Client",
                        "example": "Ivanov"
                    },
                    "emails": {
                        "title": "Client mailboxes",
                        "description": "Class Client",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "ivanov@usedesc.ru"
                        }
                    },
                    "phones": {
                        "title": "Client phones",
                        "description": "Class Client",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "+7(999)9999999"
                        }
                    }
                },
                "type": "object"
            },
            "ClientEmail": {
                "title": "Email client",
                "description": "model email",
                "required": [
                    "email"
                ],
                "properties": {
                    "email": {
                        "description": "Class ClientEmail",
                        "example": "ivanov@usedesk.ru"
                    }
                },
                "type": "object"
            },
            "ClientPhone": {
                "title": "Phone client",
                "description": "Phone model",
                "required": [
                    "phone"
                ],
                "properties": {
                    "phone": {
                        "description": "Class ClientPhone",
                        "example": "+7(999)9999999"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "Authorization",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}
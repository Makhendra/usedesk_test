                                        "data": {
                                            "description": "Clients list",
                                            "properties": {
                                                "current_page": {
                                                    "description": "Clients list",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "to": {
                                                    "description": "Clients list",
                                                    "type": "integer",
                                                    "example": 3
                                                },
                                                "from": {
                                                    "description": "Clients list",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "total": {
                                                    "description": "Clients list",
                                                    "type": "integer",
                                                    "example": 3
                                                },
                                                "per_page": {
                                                    "description": "Clients list",
                                                    "type": "integer",
                                                    "example": 15
                                                },
                                                "last_page": {
                                                    "description": "Clients list",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "first_page_url": {
                                                    "description": "Clients list",
                                                    "type": "string",
                                                    "example": "http://localhost:8000/api/clients?page=1"
                                                },
                                                "next_page_url": {
                                                    "description": "Clients list",
                                                    "type": "string",
                                                    "example": "null"
                                                },
                                                "last_page_url": {
                                                    "description": "Clients list",
                                                    "type": "string",
                                                    "example": "http://localhost:8000/api/clients?page=1"
                                                },
                                                "prev_page_url": {
                                                    "description": "Clients list",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "data": {
                                                    "description": "Clients list",
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Client"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Clients"
                ],
                "summary": "Add client",
                "operationId": "App\\Http\\Controllers\\Api\\ClientController::store",
                "requestBody": {
                    "request": "client",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Client"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Error in question"
                    },
                    "401": {
                        "description": "Authorisation Error"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/clients/{client_id}": {
